{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "args": [
                "--host",
                "0.0.0.0"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dashboard Dev Server",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "dev",
                "--workspace",
                "dashboard",
                "--",
                "--host",
                "0.0.0.0",
                "--port",
                "8180"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Dev: App (Backend + Bsky-Client)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:app"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "VITE v[0-9.]+  ready in",
                "uriFormat": "http://localhost:5174",
                "action": "openExternally"
            }
        }
    ],
    "compounds": [
        {
            "name": "Dev: Backend + Dashboard",
            "configurations": [
                "Backend Server",
                "Dashboard Dev Server"
            ],
            "stopAll": true
        }
    ]
}
