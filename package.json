{
  "name": "bsky-kampagnen-bot",
  "version": "1.0.0",
  "description": "Bot um Kampagnen-Skeets an ausgew채hlten Tagen zu senden und die Reaktionen zu 체berpr체fen.",
  "keywords": [],
  "license": "ISC",
  "author": "Michael K체per & S.A.R.A.H.",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "node server.js",
    "start:dev": "cross-env NODE_ENV=development node server.js",
    "start:test": "cross-env NODE_ENV=test node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "migrate:dev": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "migrate:test": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "migrate:prod": "cross-env NODE_ENV=production npx sequelize-cli db:migrate",
    "seed:dev": "cross-env NODE_ENV=development npx sequelize-cli db:seed:all",
    "seed:test": "cross-env NODE_ENV=test npx sequelize-cli db:seed:all",
    "seed:prod": "cross-env NODE_ENV=production npx sequelize-cli db:seed:all",
    "smoke:bsky": "tsx scripts/smokeBlueskyPost.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke:masto": "tsx scripts/smokeMastodonPost.ts",
    "build:frontend": "npm_config_workspaces=true npm run build --workspace dashboard",
    "dev:frontend": "npm_config_workspaces=true npm run dev --workspace dashboard",
    "install:frontend": "npm_config_workspaces=true npm install --workspace dashboard",
    "install:all": "npm_config_workspaces=true npm install --workspaces --include-workspace-root",
    "mobile:start": "npm_config_workspaces=true npm run start --workspace apps/mobile",
    "mobile:web": "npm_config_workspaces=true npm run web --workspace apps/mobile",
    "desktop:dev": "npm_config_workspaces=true npm run dev --workspace apps/desktop",
    "desktop:build": "npm_config_workspaces=true npm run tauri:build --workspace apps/desktop",
    "build:all": "npm run build && npm run build:frontend",
    "docker:build": "docker compose build",
    "docker:bundle": "./scripts/docker-bundle.sh"
  },
  "dependencies": {
    "@atproto/api": "^0.15.27",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "grapheme-splitter": "^1.0.4",
    "mastodon-api": "^1.3.0",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "undici": "^7.13.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "dashboard",
      "apps/*",
      "packages/*"
    ]
  }
}
