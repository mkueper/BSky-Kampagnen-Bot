{
  "name": "bsky-kampagnen-bot",
  "version": "1.0.0",
  "description": "Bot um Kampagnen-Skeets an ausgew채hlten Tagen zu senden und die Reaktionen zu 체berpr체fen.",
  "keywords": [],
  "license": "ISC",
  "author": "Michael K체per & S.A.R.A.H.",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "node server.js",
    "start:dev": "node scripts/switch-env.js dev if-missing && NODE_ENV=development node server.js",
    "start:test": "NODE_ENV=test node server.js",
    "start:prod": "node scripts/switch-env.js prod if-missing && NODE_ENV=production node server.js",
    "migrate:dev": "NODE_ENV=development sequelize db:migrate",
    "migrate:test": "NODE_ENV=test sequelize db:migrate",
    "migrate:prod": "NODE_ENV=production sequelize db:migrate",
    "migrate:reset:dev": "NODE_ENV=development sequelize db:migrate:undo:all && NODE_ENV=development sequelize db:migrate",
    "migrate:reset:test": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate",
    "migrate:reset:prod": "NODE_ENV=production sequelize db:migrate:undo:all && NODE_ENV=production sequelize db:migrate",
    "db:reset:dev": "NODE_ENV=development node scripts/db-reset.js && NODE_ENV=development sequelize db:migrate",
    "db:reset:test": "NODE_ENV=test node scripts/db-reset.js && NODE_ENV=test sequelize db:migrate",
    "db:reset:prod": "NODE_ENV=production node scripts/db-reset.js && NODE_ENV=production sequelize db:migrate",
    "meta:clean:dev": "NODE_ENV=development node scripts/clean-sequelize-meta.js",
    "meta:clean:test": "NODE_ENV=test node scripts/clean-sequelize-meta.js",
    "meta:clean:prod": "NODE_ENV=production node scripts/clean-sequelize-meta.js",
    "seed:dev": "NODE_ENV=development sequelize db:seed:all",
    "seed:test": "NODE_ENV=test sequelize db:seed:all",
    "seed:prod": "NODE_ENV=production sequelize db:seed:all",
    "smoke:bsky": "tsx scripts/smokeBlueskyPost.ts",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke:masto": "tsx scripts/smokeMastodonPost.ts",
    "build:frontend": "npm_config_workspaces=true npm run build --workspace dashboard",
    "dev:frontend": "npm_config_workspaces=true npm run dev --workspace dashboard",
    "install:frontend": "npm_config_workspaces=true npm install --workspace dashboard",
    "install:all": "npm_config_workspaces=true npm install --workspaces --include-workspace-root",
    "build:all": "npm run build && npm run build:frontend",
    "docker:build": "docker compose build",
    "docker:bundle": "./scripts/docker-bundle.sh",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx --max-warnings=0",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx --fix",
    "switchenv:dev": "node scripts/switch-env.js dev",
    "switchenv:prod": "node scripts/switch-env.js prod",
    "changelog:add": "node scripts/changelog-add.js",
    "changelog:note": "node scripts/changelog-note.js",
    "changelog:release": "node scripts/changelog-release.js",
    "changelog:lint": "node scripts/changelog-lint.js",
    "tools:set-masto-segment": "node scripts/setMastoSegment.js"
  },
  "dependencies": {
    "@atproto/api": "^0.15.27",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "grapheme-splitter": "^1.0.4",
    "mastodon-api": "^1.3.0",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "undici": "^7.13.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "dashboard"
    ]
  }
}
