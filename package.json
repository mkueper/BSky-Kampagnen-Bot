{
  "name": "bsky-kampagnen-bot",
  "version": "1.1.1",
  "description": "Bot um Kampagnen-Skeets an ausgew채hlten Tagen zu senden und die Reaktionen zu 체berpr체fen.",
  "keywords": [],
  "license": "ISC",
  "author": "Michael K체per & S.A.R.A.H (OpenAI ChatGPT-5)",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "dev": "cross-env NODE_ENV=development nodemon backend/server.js",
    "start": "node backend/server.js",
    "start:dev": "node scripts/switch-env.js dev if-missing && NODE_ENV=development node backend/server.js",
    "start:test": "NODE_ENV=test node backend/server.js",
    "start:prod": "node scripts/switch-env.js prod if-missing && NODE_ENV=production node backend/server.js",
    "migrate:dev": "NODE_ENV=development sequelize db:migrate",
    "migrate:test": "NODE_ENV=test sequelize db:migrate",
    "migrate:prod": "NODE_ENV=production sequelize db:migrate",
    "migrate:reset:dev": "NODE_ENV=development sequelize db:migrate:undo:all && NODE_ENV=development sequelize db:migrate",
    "migrate:reset:test": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate",
    "migrate:reset:prod": "NODE_ENV=production sequelize db:migrate:undo:all && NODE_ENV=production sequelize db:migrate",
    "db:reset:dev": "NODE_ENV=development node scripts/db-reset.js && NODE_ENV=development sequelize db:migrate",
    "db:reset:test": "NODE_ENV=test node scripts/db-reset.js && NODE_ENV=test sequelize db:migrate",
    "db:reset:prod": "NODE_ENV=production node scripts/db-reset.js && NODE_ENV=production sequelize db:migrate",
    "meta:clean:dev": "NODE_ENV=development node scripts/clean-sequelize-meta.js",
    "meta:clean:test": "NODE_ENV=test node scripts/clean-sequelize-meta.js",
    "meta:clean:prod": "NODE_ENV=production node scripts/clean-sequelize-meta.js",
    "seed:dev": "NODE_ENV=development sequelize db:seed:all",
    "seed:test": "NODE_ENV=test sequelize db:seed:all",
    "seed:prod": "NODE_ENV=production sequelize db:seed:all",
    "smoke:bsky": "tsx scripts/smokeBlueskyPost.ts",
    "build:backend": "node -e \"console.log('Skipping backend build (JS project)')\"",
    "build": "npm run build:backend",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "smoke:masto": "tsx scripts/smokeMastodonPost.ts",
    "build:frontend": "npm_config_workspaces=true npm run build --workspace dashboard",
    "dev:frontend": "npm_config_workspaces=true npm run dev --workspace dashboard",
    "install:frontend": "npm_config_workspaces=true npm install --workspace dashboard",
    "build:bsky-client": "npm_config_workspaces=true npm run build --workspace bsky-client",
    "dev:bsky-client": "npm_config_workspaces=true npm run dev --workspace bsky-client",
    "install:bsky-client": "npm_config_workspaces=true npm install --workspace bsky-client",
    "install:all": "npm_config_workspaces=false npm install --workspaces --include-workspace-root",
    "build:all": "npm run build:backend && npm run build:bsky-client && npm run build:frontend",
    "dev:electron": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:electron": "npm run build:frontend && electron-builder -l AppImage",
    "build:electron:win": "npm run build:frontend && electron-builder -w nsis",
    "pack:electron": "npm run build:frontend && electron-builder --dir -l AppImage",
    "docker:build": "docker compose build",
    "docker:bundle": "./scripts/docker-bundle.sh",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "switchenv:dev": "node scripts/switch-env.js dev",
    "switchenv:prod": "node scripts/switch-env.js prod",
    "changelog:add": "node scripts/changelog-add.js",
    "changelog:note": "node scripts/changelog-note.js",
    "changelog:release": "node scripts/changelog-release.js",
    "changelog:lint": "node scripts/changelog-lint.js",
    "tools:set-masto-segment": "node scripts/setMastoSegment.js",
    "ci:verify": "bash scripts/verify-locks.sh"
  },
  "dependencies": {
    "@atproto/api": "^0.15.27",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "grapheme-splitter": "^1.0.4",
    "module-alias": "^2.2.2",
    "node-cron": "^4.2.1",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "undici": "^7.13.0"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "jsdom": "^27.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  },
  "private": true,
  "_moduleAliases": {
    "@api": "backend/src/api",
    "@core": "backend/src/core",
    "@data": "backend/src/data",
    "@platforms": "backend/src/platforms",
    "@utils": "backend/src/utils",
    "@config": "backend/src/config.js",
    "@env": "backend/src/env.js"
  },
  "workspaces": {
    "packages": [
      "backend",
      "dashboard",
      "bsky-client",
      "packages/media-pickers"
    ]
  },
  "build": {
    "appId": "com.mkueper.bsky-kampagnen-bot",
    "productName": "BSky Kampagnen Bot",
    "files": [
      "electron/**/*",
      "dashboard/dist/**/*",
      "backend/**/*",
      "config/**/*",
      "migrations/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    }
  }
}
