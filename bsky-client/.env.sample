##################################################
# bsky-client .env.sample
#
# Kopiere diese Datei zu ".env" und passe sie an.
# Sensible Werte niemals committen.
##################################################

## Container (Prod)
# Port fuer den bsky-client Container (docker-compose.bsky-client.yml).
BSKY_CLIENT_PORT=5173

## Link-Preview (optional)
# Port fuer den Preview-Proxy-Container (docker-compose.bsky-client.yml).
PREVIEW_PROXY_PORT=3456
# Pfad fuer den Preview-Proxy (Default: /preview)
# PREVIEW_PROXY_PATH=/preview
# Build-Endpoint fuer Link-Metadaten (Client).
# VITE_PREVIEW_PROXY_URL=/preview

## Uebersetzung (optional)
# Basis-URL fuer LibreTranslate.
# VITE_LIBRETRANSLATE_BASE_URL=http://localhost:5000
# true|false
# VITE_TRANSLATION_ENABLED=true

## Lokalisierung (optional)
# VITE_TIME_ZONE=Europe/Berlin
# VITE_LOCALE=de-DE
