{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": "."
        // Optional (nur wenn du Pfad-Aliase willst, und tsx/Build das mitmacht):
        // "paths": {
        //   "@/*": ["src/*"]
        // }
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-scripts"
    ]
}