{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@api/*": ["src/api/*"],
            "@core/*": ["src/core/*"],
            "@data/*": ["src/data/*"],
            "@platforms/*": ["src/platforms/*"],
            "@utils/*": ["src/utils/*"],
            "@config": ["src/config.js"],
            "@env": ["src/env.js"]
        }
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts"
, "src/platforms/registry.js", "src/utils/graphemes.js", "src/env.js", "src/services/postService.js"    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-scripts"
    ]
}
